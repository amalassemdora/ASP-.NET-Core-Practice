@model List<Post>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Posts</title>
</head>
<body>
    <a asp-action="create" asp-controller="blog">Create</a>
    <table border="1">
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Body</th>
            <th>Time</th>
            <th>Blog Title</th>
            <th>Operations</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.post_title</td>
                <td>@item.body</td>
                <td>@item.time</td>
                <td>@item.blog.title</td>
                <td>
                    <a asp-action="details" asp-controller="blog" asp-route-id="@item.Id">Details</a>
                    <a asp-action="edit" asp-controller="blog" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="delete" asp-controller="blog" asp-route-id="@item.Id">Delete</a>
                </td>

            </tr>
        }
    </table>
</body>
</html>
